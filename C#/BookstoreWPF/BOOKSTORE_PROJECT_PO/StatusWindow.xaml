<Window x:Class="BOOKSTORE_PROJECT_PO.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOOKSTORE_PROJECT_PO"
        mc:Ignorable="d"
        Title="STATUS" Height="260" Width="261">
    <Grid>
        <Label Content="STATUS" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" FontFamily="Microsoft Himalaya" FontWeight="Bold" FontSize="24"/>
        <DataGrid x:Name="gridStatus" d:ItemsSource="{d:SampleData ItemCount=2}" Margin="0,50,0,0" HorizontalAlignment="Center" ColumnWidth="*" Height="95" VerticalAlignment="Top"/>
        <Button Click="BtnBackToMainWindow" Content="Back" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Microsoft Himalaya" Width="100" Height="20"/>
    </Grid>
</Window>
