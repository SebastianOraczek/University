@using MN_SO_APS_PROJECT.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ASP PROJECT 2023</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MN_SO_APS_PROJECT.styles.css" asp-append-version="true" />
</head>
<body>
    <header fixed-top d-flex align-items-center">
        <nav id="navbarId" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASP PROJECT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div id="navbarId" class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark active" asp-area="" asp-controller="User" asp-action="List">All Users</a>
                        </li>
                        @if(SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">Your Details</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Details">Details</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Comment" asp-action="List">Your Comments</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Comment" asp-action="Create">Add Comment</a>
                                </ul>
                            </li>
                        }
                        @if(User.IsInRole("admin"))
                        {
                            <li  class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Comment" asp-action="AllComments">All Comments</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="City" asp-action="List">All Cities</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Country" asp-action="List">All Countries</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="City" asp-action="Create">Add City</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Country" asp-action="Create">Add Country</a>
                                </ul>
                            </li>
                        }
                    </div>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MN_SO_APS_PROJECT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
