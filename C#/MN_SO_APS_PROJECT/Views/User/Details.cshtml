<div class="container justify-content-center mt-4">
    <div class="row mb-3">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 list-group-item d-flex justify-content-between align-items-start">
            <div class="card-body">
                <h5 class="card-title">@ViewBag.User.Login</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Login: @ViewBag.User.Login</li>
		            <li class="list-group-item">Email: @ViewBag.User.Email</li>
                    <li class="list-group-item">Country: @ViewBag.Country.CountryName</li>
		            <li class="list-group-item">City: @ViewBag.City.CityName</li>
		            <li class="list-group-item">Password: @ViewBag.User.Password</li>
                </ul>
            </div>
            <span class="badge bg-primary rounded-pill">@User.IsInRole("admin")</span>
        </div>
    </div>
</div>