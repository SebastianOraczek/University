@page
@using MN_SO_APS_PROJECT.Models

@model RegisterModel

@inject ApplicationDbContext _db;

@{
    List<CityModel> cities = _db.City.ToList();
    List<CountryModel> countries = _db.Coutry.ToList();
}

<div class="container justify-content-center">
    <div class="row mb-3">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card-body">
                <h5 class="card-title">Register</h5>
                <form asp-route-returnUrl="@Model.ReturnUrl" id="registerForm" method="post" class="validated-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3 form-floating">
                        <input asp-for="Input.Email" autofocus class="form-control" autocomplete="email" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating">
                        <input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Login" class="form-label"></label>
                        <span asp-validation-for="Input.Login" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating">
                        <select class="form-select" asp-for="Input.CityId" aria-label="City" aria-required="true" autocomplete="City">
                            @foreach(CityModel city in cities)
                            {
                                <option value="@city.Id">@city.CityName</option>
                            }
                        </select>
                        <label asp-for="Input.CityId" class="form-label"></label>
                        <span asp-validation-for="Input.CityId" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating">
                        <select class="form-select" asp-for="Input.CountryId" aria-label="City" aria-required="true" autocomplete="City">
                            @foreach(CountryModel country in countries)
                            {
                                <option value="@country.Id">@country.CountryName</option>
                            }
                        </select>
                        <label asp-for="Input.CityId" class="form-label"></label>
                        <span asp-validation-for="Input.CityId" class="text-danger"></span>
                    </div>
                    <div  class="d-grid">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
