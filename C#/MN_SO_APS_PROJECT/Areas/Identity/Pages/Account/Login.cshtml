@page
@model LoginModel

<div class="container justify-content-center">
    <div class="row mb-3">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card-body">
                <h5 class="card-title">Login</h5>
                <form id="account" method="post" class="validated-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3 form-floating">
                        <input asp-for="Input.Email" autofocus class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div  class="d-grid">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
